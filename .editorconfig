# Editor configuration, see https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{php,phpstub,xml,xsd,json,lock,yml,yaml,md,neon,dist}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
